---
import path from "node:path/posix";
import Navigation from "@components/Navigation.astro";
import Text from "./_text.md";
import "src/stylesheets/common.css";
import "src/stylesheets/markdown.css";
import SocialLinks from "@components/SocialLinks.astro";
import Head from "@components/Head.astro";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Deepworld 2025 Edition</title>
        <Head />
        <meta name="description" content="Welcome to Graptik and Boraini's 2025 reincarnation of our all-time favourite steampunk MMORPG!">
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <header>
            <Navigation />
        </header>
        <main>
            <section
                id="social-section"
                class="relative py-18 text-center bg-gray-900 text-white"
            >
                <video
                    class="absolute w-full h-full inset-0 object-cover"
                    width={960}
                    height={540}
                    autoplay
                    loop
                    muted
                    playsinline
                    preload="none"
                >
                    <source
                        src="https://v2202410239072292297.goodsrv.de:6443/deepworld-website-video.webm"
                        type="video/webm"
                    />
                    <source
                        src="https://v2202410239072292297.goodsrv.de:6443/deepworld-website-video.mp4"
                        type="video/mp4"
                    />
                </video>
                <div
                    id="social-section-contents"
                    class="relative m-auto z-20 max-w-240 top-0 px-8"
                >
                    <h1 class="title-font text-bold text-brass text-6xl mb-4">
                        The Legend has Returned
                    </h1>
                    <h2 class="text-2xl">
                        Your favourite Steampunk MMORPG, sunsetted in 2019, is
                        brought back online by its devoted fans.
                    </h2>
                    <p
                        class="mx-auto flex flex-col md:flex-row mt-16 mb-8 max-w-160"
                    >
                        <a
                            class="block grow mx-4 my-2 p-3 brass-edging brass-background border-8 rounded-full text-etched-brass font-bold text-xl"
                            target="_blank"
                            href="https://drive.google.com/file/d/1gKaZCgojBmFann9ER-VMbIVnGPKc_2BO/view?usp=sharing"
                            >Download Updated Client</a
                        >
                        <a
                            class="block grow mx-4 my-2 p-3 brass-edging brass-background border-8 rounded-full text-etched-brass font-bold text-xl"
                            href={path.join(
                                import.meta.env.BASE_URL,
                                "/players",
                            )}>View Players</a
                        >
                    </p>
                    <SocialLinks
                        size="3em"
                        links={{
                            discord: "https://discord.gg/J9FxmXM",
                            github: "https://github.com/kuroppoi/brainwine",
                        }}
                    />
                </div>
            </section>
            <section class="about bg-etched-brass text-white">
                <div class="mx-auto my-4 max-w-192 p-4 markdown">
                    <Text />
                </div>
            </section>
        </main>
    </body>
</html>

<style>
    :global(html) {
        background-color: var(--color-etched-brass);
    }
</style>
